        + random_event()
        + get_season()
        + end_year()
        + start_election()
        + pause(p : Bool)
    }

    package school 
    {

        'Class static pour gérer les étudiants'
        class Study
        {
            + populate_year()
            + populate_promo(dept : String, year : Integer)
